#include <iostream>
using namespace std;

int main ()
{
    int x, y, z;
    cout << "Masukkan Bilangan x : ";
    cin >> x;
    cout << "Masukkan Bilangan y : ";
    cin >> y;
    z = x + y;
    cout << x << " + " << " = " << z << endl;
    if (z>=0) {
      cout << "nilai" << z << "adalah bilangan positif" << endl;
      } else if (z<=0) {
      cout << "nilai" << y << "adalah bilangan negatif" << endl;
      }
      cout << "Program Ini Adalah Program Berhitung" << endl;
     
return 0;
}
