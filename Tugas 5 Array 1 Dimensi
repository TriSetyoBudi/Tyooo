#include <iostream>
using namespace std;

int main()
{
    int Beras[5];
    int hasil=0;
    for(int i=0; i<5; i++)
        {
           cout << "Input Beras ke-" << (i + 1 ) << ":";
           cin >> Beras[i];
        }
     cout << "Nilai Beras Yang Anda Masukkan ..." << endl;
     for(int i=0; i<5; i++)
        {
           hasil+= Beras[i];
           cout << "\nKarung ke-" << (i + 1) << " adalah " << Beras[i] << " Liter";
        }
     cout << "\nTotal Beras setiap Karung ..." << endl << endl;
     cout << hasil << " Liter";
    return 0;
}
